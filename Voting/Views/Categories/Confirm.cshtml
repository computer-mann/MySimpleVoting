@model Voting.Models.Candidate

@{
    ViewData["Title"] = "Confirm";
}

<h1>Confirm</h1>

<h3>Are you sure you want to add @Model.CandidateName to this category?</h3>
<div>
    <h4>Candidate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CandidateName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CandidateName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo)
        </dd>
    </dl>

    <form asp-action="Confirm" method="post" asp-route-catId="@ViewBag.CatId">
        <input type="hidden" asp-for="CanId" />
        <input type="hidden" asp-for="CandidateName" />
        <input type="hidden" asp-for="Year" />
        <input type="hidden" asp-for="Photo" />
        <input type="submit" value="Confirm" class="btn btn-info" /> |
    </form>
    <a asp-action="AddCandidatesToCategory">Back to List</a>
</div>
