@model Voting.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
           Number Of Candidates
        </dt>
        <dd class="col-sm-10">
           @ViewBag.NoOfCandidates
        </dd>
    </dl>
    <a asp-action="AddCandidatesToCategory" asp-route-id="@Model.Id">Add Candidates To Category</a>
</div>
<div>
    <a asp-action="EditCategory" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="List">Back to List</a>
</div>
